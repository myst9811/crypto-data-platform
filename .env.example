# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW_TRADES=raw-trades
KAFKA_TOPIC_RAW_ORDERBOOK=raw-orderbook
KAFKA_TOPIC_RAW_TICKER=raw-ticker

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077
SPARK_APP_NAME=crypto-streaming
SPARK_EXECUTOR_MEMORY=2g
SPARK_DRIVER_MEMORY=1g

# Delta Lake Configuration
DELTA_LAKE_PATH=./data
BRONZE_PATH=./data/bronze
SILVER_PATH=./data/silver
GOLD_PATH=./data/gold
CHECKPOINT_PATH=./data/checkpoints

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./src/airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Exchange API Configuration (Optional - for authenticated endpoints)
BINANCE_API_KEY=
BINANCE_API_SECRET=
COINBASE_API_KEY=
COINBASE_API_SECRET=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Trading Pairs (comma-separated)
TRADING_PAIRS=BTC/USD,ETH/USD,BNB/USD,SOL/USD,XRP/USD

# Arbitrage Detection Configuration
ARBITRAGE_THRESHOLD_PERCENT=0.5
TRADING_FEE_PERCENT=0.1

# Data Retention (days)
DATA_RETENTION_DAYS=30

# Environment
ENVIRONMENT=development
